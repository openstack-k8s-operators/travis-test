pipeline {
    agent none
    stages {
        stage('Run PR jobs') {
        when {
            branch 'PR-*'
        }
            parallel {
                stage('DFG-converged-openstack-k8s') {
                    steps {
                        build job: 'DFG-converged-openstack-k8s',
                                  parameters: [
                                      string(name: 'GITHUB_PULL_REQUEST_ID', value: String.valueOf(CHANGE_ID))
                                  ]
                    }
                }
            }
        }
        stage('Run Push jobs') {
        when {
            allOf {
                environment name: 'CHANGE_ID', value: ''
                branch 'master'
            }
        }
        steps {
            build job: 'DFG-converged-openstack-k8s'
        }
        }
    }
}
